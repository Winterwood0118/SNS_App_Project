<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="130dp"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/customUserImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="200dp">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="200dp"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/customUserProfileImageView"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_test"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/customUserFrameImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/frame_story"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/customNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="사람이름"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customUserImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>