<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detailLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/instagram_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/detailLogoImageView"
        app:layout_constraintStart_toEndOf="@+id/detailLogoImageView"
        android:src="@drawable/arrow_down_icon"/>


    <ImageView
        android:id="@+id/detailTopBannerLikeIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@+id/detailLogoImageView"
        app:layout_constraintBottom_toBottomOf="@+id/detailLogoImageView"
        app:layout_constraintEnd_toStartOf="@+id/detailTopBannerMessengerIconImageView"
        android:src="@drawable/like_icon"/>

    <ImageView
        android:id="@+id/detailTopBannerMessengerIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@+id/detailLogoImageView"
        app:layout_constraintBottom_toBottomOf="@+id/detailLogoImageView"
        app:layout_constraintEnd_toStartOf="@id/detailTopBannerAddIconImageView"
        android:src="@drawable/messenger_icon"/>

    <ImageView
        android:id="@+id/detailTopBannerAddIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/detailLogoImageView"
        app:layout_constraintBottom_toBottomOf="@+id/detailLogoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/add_icon"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailTopBannerAddIconImageView"
        tools:listitem="@layout/circle_image_layout"/>


</androidx.constraintlayout.widget.ConstraintLayout>